<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedHospitalActivity"
    android:background="#dae0e7"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">



<!--        <TextView-->
<!--            android:id="@+id/htextViewA"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="60dp"-->
<!--            android:text="Details : "-->
<!--            android:textAlignment="viewStart"-->
<!--            android:textSize="30dp"-->
<!--            android:paddingStart="10dp"-->
<!--            android:paddingTop="5dp"-->
<!--            android:textColor="@color/black"/>-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tvSelectedHospitalName"
                        android:layout_marginVertical="10dp"
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:src="@drawable/placeholder"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="10dp">

                        <TextView
                            android:id="@+id/tvSelectedHospitalLocation"
                            android:layout_marginVertical="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textAlignment="viewStart"
                            android:textSize="20dp"
                            android:textColor="#6b6f73"/>

                        <TextView
                            android:id="@+id/tvSelectedHospitalAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewStart"
                            android:textSize="18dp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_marginVertical="10dp"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ratings"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_marginVertical="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="viewStart"
                                android:textSize="25dp"
                                android:text="Rs"
                                android:textColor="@color/black"
                                android:paddingEnd="5dp"/>

                            <TextView
                                android:id="@+id/tvSelectedHospitalState"
                                android:layout_marginVertical="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="viewStart"
                                android:textSize="25dp"
                                android:text="Rs"
                                android:textColor="@color/black"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:text="Overview : "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:text="This book is a mesmerizing tale of love, destiny, and the timeless quest for self-discovery, penned by the acclaimed author yash agrawal. Set against the backdrop of a quaint coastal town, the novel weaves together the lives of three individuals across different eras, connected by a mysterious lighthouse that holds the key to their intertwined fates."/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:layout_marginTop="15dp"
            app:contentPaddingTop="10dp"
            app:contentPaddingBottom="10dp">

            <Button
                android:id="@+id/purchase"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/black"
                android:text="Purchase"
                android:textColor="@color/white"/>



        </androidx.cardview.widget.CardView>


    </LinearLayout>




</LinearLayout>